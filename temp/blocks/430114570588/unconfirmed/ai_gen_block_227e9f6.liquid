{% doc %}
  @prompt
    A Blog Post Block showing only Blog Posts with the Tag "Ofen- und Grillrezepte"

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-posts-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-blog-posts-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blog-posts-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-blog-posts-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
  }

  .ai-blog-posts-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-blog-posts-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 40px;
  }

  .ai-blog-post-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-blog-post-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-blog-post-image-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    position: relative;
    overflow: hidden;
  }

  .ai-blog-post-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-post-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-blog-post-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.5;
  }

  .ai-blog-post-content-{{ ai_gen_id }} {
    padding: 24px;
  }

  .ai-blog-post-meta-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.meta_color }};
    margin-bottom: 8px;
  }

  .ai-blog-post-title-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
  }

  .ai-blog-post-card-title-{{ ai_gen_id }} {
    font-size: 18px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 12px;line-height: 1.4;
  }

  .ai-blog-post-excerpt-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.card_text_color }};
    line-height: 1.5;
    margin: 0 0 16px;
  }

  .ai-blog-post-read-more-{{ ai_gen_id }} {
    display: inline-block;
    font-size: 14px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-weight: 500;
  }

  .ai-blog-post-read-more-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
  }

  .ai-blog-posts-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-blog-posts-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-blog-posts-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }
{% endstyle %}

<div class="ai-blog-posts-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-posts-container-{{ ai_gen_id }}">
    {% if block.settings.show_header %}
      <div class="ai-blog-posts-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-blog-posts-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-blog-posts-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.blog != blank %}
      {% assign filtered_articles = block.settings.blog.articles | where: 'tags', 'Ofen- und Grillrezepte' %}
      {% assign articles_to_show = filtered_articles | slice: 0, block.settings.posts_to_show %}

      {% if articles_to_show.size > 0 %}
        <div class="ai-blog-posts-grid-{{ ai_gen_id }}">
          {% for article in articles_to_show %}<article class="ai-blog-post-card-{{ ai_gen_id }}">
              <div class="ai-blog-post-image-{{ ai_gen_id }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 400 }}"
                    alt="{{ article.image.alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="200"
                  >
                {% else %}
                  <div class="ai-blog-post-placeholder-{{ ai_gen_id }}">
                    {{ 'blog-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-blog-post-content-{{ ai_gen_id }}">
                <div class="ai-blog-post-meta-{{ ai_gen_id }}">
                  {{ article.published_at | date: '%B %d, %Y' }}
                </div>

                <a href="{{ article.url }}" class="ai-blog-post-title-link-{{ ai_gen_id }}">
                  <h3 class="ai-blog-post-card-title-{{ ai_gen_id }}">{{ article.title }}</h3>
                </a>

                {% if block.settings.show_excerpt and article.excerpt != blank %}
                  <div class="ai-blog-post-excerpt-{{ ai_gen_id }}">
                    {{ article.excerpt | truncate: 120 }}
                  </div>
                {% endif %}

                <a href="{{ article.url }}" class="ai-blog-post-read-more-{{ ai_gen_id }}">
                  {{ block.settings.read_more_text }}
                </a>
              </div>
            </article>
          {% endfor %}
        </div>
      {% else %}
        <div class="ai-blog-posts-empty-{{ ai_gen_id }}">
          <p>No blog posts found with the tag "Ofen- und Grillrezepte".</p>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-blog-posts-empty-{{ ai_gen_id }}">
        <p>Please select a blog to display posts.</p>
      </div>
    {% endif %}
  </div>
</div>

